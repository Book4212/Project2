<p id="notice"><%= notice %></p>

<h1>Students</h1>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Subject</th>
      <th>Sec</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.user.name %></td>
        <td><%= study.user.student.studentid %></td>
        <td><%= study.sec.subject.subject_Name %></td>
        <td><%= study.sec.sec %></td>
        <td><%= link_to 'Show', study %></td>
        <td><%= link_to 'Edit', edit_study_path(study) %></td>
        <td><%= link_to 'Destroy', study, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<br>
<a class="btn btn-primary" href="/studies.csv">Download CSV</a>